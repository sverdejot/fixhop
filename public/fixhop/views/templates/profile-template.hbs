{{> message-partial}}
{{> navbar-partial user=user cartItemCount=cartItemCount}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col col-xl-9 col-md-12">
            <div class="card mb-3">
                <h3 class="card-header text-center">Perfil</h3>
                <div class="card-body mb-3">
                    <div class="card-text">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col col-md-3 col-sm-12 text-center mb-3">
                                    <svg class="bi bi-person-bounding-box" width="200px" height="200px"
                                        viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M1.5 1a.5.5 0 00-.5.5v3a.5.5 0 01-1 0v-3A1.5 1.5 0 011.5 0h3a.5.5 0 010 1h-3zM11 .5a.5.5 0 01.5-.5h3A1.5 1.5 0 0116 1.5v3a.5.5 0 01-1 0v-3a.5.5 0 00-.5-.5h-3a.5.5 0 01-.5-.5zM.5 11a.5.5 0 01.5.5v3a.5.5 0 00.5.5h3a.5.5 0 010 1h-3A1.5 1.5 0 010 14.5v-3a.5.5 0 01.5-.5zm15 0a.5.5 0 01.5.5v3a1.5 1.5 0 01-1.5 1.5h-3a.5.5 0 010-1h3a.5.5 0 00.5-.5v-3a.5.5 0 01.5-.5z"
                                            clip-rule="evenodd" />
                                        <path fill-rule="evenodd"
                                            d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z"
                                            clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="col col-md-9 col-sm-12 text-center mb-3">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="nameLabel">Nombre</span>
                                        </div>
                                        <input type="text" class="form-control bg-white" id="name"
                                            aria-describedby="nameLabel" value="{{user.name}}" readonly>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="addressLabel">Dirección</span>
                                        </div>
                                        <input type="text" class="form-control bg-white" id="address"
                                            aria-describedby="addressLabel" value="{{user.address}}" readonly>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="emailLabel">Correo
                                                electrónico</span>
                                        </div>
                                        <input type="text" class="form-control bg-white" id="email"
                                            aria-describedby="emailLabel" value="{{user.email}}" readonly>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="birthLabel">Fecha de
                                                nacimiento</span>
                                        </div>
                                        <input type="text" class="form-control bg-white" id="birthdate"
                                            aria-describedby="birthLabel" value="{{user.birth}}" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                <h2 class="mt-2 mb-3">Lista de pedidos</h2>
                                <div class="table-responsive-sm">
                                    <table class="table">
                                        <thead>
                                            <th scope="col">Fecha confirmación</th>
                                            <th scope="col">Nº pedido</th>
                                            <th scope="col">Subtotal</th>
                                            <th scope="col"></th>
                                        </thead>
                                        <tbody>
                                            {{#each user.orders}}
                                                {{> order-partial this orderDetails_onclick="Controller.controllers.profile.orderDetails_onclick"}}
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{> footer-partial}}